<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/addBook.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <title>Edit Book</title>
</head>

<body>
    <div class="container">
        <% if (book) { %>
            <header>
                <h1>Update Book
                </h1>
                <button onclick="window.location.href='/'"><i class='bx bx-arrow-back'></i> Back to Dashboard</button>
            </header>

            <form action="/update-book/<%= book.Entry_ID %>" method="POST" class="book-form" onsubmit="return confirmUpdate();">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" value="<%= book.Title %>" required>
                </div>

                <div class="form-group">
                    <label for="author">Author</label>
                    <input type="text" id="author" name="author" value="<%= book.Author %>" required>
                </div>

                <div class="form-group">
                    <label for="genre">Genre</label>
                    <input type="text" id="genre" name="genre" value="<%= book.Genre %>" required>
                </div>

                <div class="form-group">
                    <label for="publicationDate">Publication Date</label>
                    <input type="date" id="publicationDate" name="publicationDate" required>
                </div>

                <div class="form-group">
                    <label for="isbn">ISBN</label>
                    <input type="text" id="isbn" name="isbn" value="<%= book.ISBN %>" required>
                </div>

                <button type="submit" class="add-btn">Update Book</button>
            </form>
            <% } else { %>
                <p>No book data available to edit.</p>
                <% } %>
    </div>

    <script>
        // Function to set the date value
        function setDate() {
            const dateInput = document.getElementById('publicationDate');
            const dateValue = '<%= book.Publication_Date.toISOString().split("T")[0] %>'; // Format the date for the input
            dateInput.value = dateValue;
        }

        // Call the function when the page loads
        window.onload = setDate;

        function confirmUpdate() {
            return confirm("Are you sure you want to update this book?");
        }
    </script>
</body>

</html>